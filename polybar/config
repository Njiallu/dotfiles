[module/i3]
type = internal/i3

ws-icon-default = ""
ws-icon-0 = "1;"
ws-icon-1 = "2;喇"
ws-icon-2 = "3;"
ws-icon-3 = "4;"
ws-icon-4 = "5;寧"
ws-icon-5 = "6;"
ws-icon-6 = "7;"
ws-icon-7 = "8;"

format = <label-state> <label-mode>

pin-workspaces = true
wsname-maxlen = 1
wrapping-scroll = 0

label-focused = %icon%
label-focused-foreground = ${root.foreground}
label-focused-background = ${root.background_alt}
label-focused-underline= ${root.primary}
label-focused-underline-size = 4
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-foreground = ${root.foreground_alt_t}
label-unfocused-background = ${root.background}
