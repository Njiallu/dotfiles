{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [ "c", "cpp", "cuda", "objc", "objcpp" ],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	},
	"coc.preferences.formatOnSaveFiletypes": ["rust"],
	"rust-client.channel": "nightly",
	"cSpellExt.enableDictionaries": ["french"],
	"cSpell.language": "en,fr"
}
